{
    "name": "hydraca-next",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "prepare": "husky install",
        "format": "prettier --write ."
    },
    "dependencies": {
        "lint-staged": "^13.0.3",
        "next": "13.0.4",
        "prettier": "^2.7.1",
        "react": "18.2.0",
        "react-dom": "18.2.0"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.13",
        "husky": "^8.0.0",
        "postcss": "^8.4.19",
        "tailwindcss": "^3.2.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.{js,jsx}": [
            "npm run format",
            "git add"
        ]
    }
}
